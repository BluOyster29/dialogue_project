    <rule id="plus">
        <one-of>
            <item>plus</item>
            <item>minus</item>
            <item>times by</item>
            <item>divided by</item>
        </one-of>
    </rule>

    <rule id="equals">
        <one-of>
            <item>equals</item>
            <item>is</item>
        </one-of>
    </rule>
    
    <rule id="equation">
        <item>
            <ruleref uri="#number"/>
            <ruleref uri="#plus"/>
            <ruleref uri="#number"/>
            <ruleref uri="#equals"/>
            <ruleref uri="#result"/>
            <tag>
                out.result = rules.result;
            </tag>
        </item>
    </rule>
    
