<?xml version="1.0" encoding="UTF-8" ?>
<grammar version="1.0" tag-format="semantics/1.0" root="number">
    <rule id="number">
    <item repeat="1-">
      <ruleref uri="#digit"></ruleref>
    </item>
  </rule>

    <rule id="result">
    <item repeat="1-">
      <ruleref uri="#digit"></ruleref>
    </item>
  </rule>

    <rule id="digit">
        <one-of>
            <item>1</item>
            <item>2</item>
            <item>3</item>
            <item>4</item>
            <item>5</item>
            <item>6</item>
            <item>7</item>
            <item>8</item>
            <item>9</item>
        </one-of>
    </rule>

